@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>

@{
    Layout = "_DashBoard"; 
}

<h1 class="text-center my-4">Roles</h1>

<!-- عرض الرسائل (نجاح أو خطأ) -->
@if (ViewData["SuccessMessage"] != null)
{
        <div class="alert alert-success text-center">
        @ViewData["SuccessMessage"]
        </div>
}
@if (ViewData["ErrorMessage"] != null)
{
        <div class="alert alert-danger text-center">
        @ViewData["ErrorMessage"]
        </div>
}

<!-- جدول الأدوار مع تحسينات تصميمية -->
<table class="table table-striped table-bordered table-hover" style="border: 1px solid #e3e3e3; border-radius: 8px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">
    <thead class="table-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Role Name</th>
            <th scope="col">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
                <tr>
                    <td>-</td>
                    <td>@role.Name</td>
                    <td>
                        <!-- زر الحذف -->
                        <form asp-action="DeleteRole" method="post" onsubmit="return confirm('Are you sure you want to delete this role?');">
                            <input type="hidden" name="roleId" value="@role.Id" />
                            <button type="submit" class="btn btn-danger" style="background-color: #dc3545; border: none; font-weight: 600; cursor: pointer; border-radius: 5px; padding: 6px 12px;">
                                Delete
                            </button>
                        </form>
                    </td>
                </tr>
        }
    </tbody>
</table>

<!-- زر إضافة دور جديد -->
<div class="text-center mt-4">
    <a href="@Url.Action("CreateRole")" class="btn btn-success" style="padding: 10px 20px; font-size: 16px; font-weight: 600; border-radius: 25px; box-shadow: 0px 4px 6px rgba(0, 0, 0, 0.1);">
        Add New Role
    </a>
</div>
