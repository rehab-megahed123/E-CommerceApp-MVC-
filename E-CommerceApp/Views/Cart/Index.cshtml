@using E_commerce.DAl.Model
@model List<CartItem>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shopping Cart • E-Commerce</title>

    <!-- إضافة CSS -->
    <style>
        /* Reset & Global Styles */
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: linear-gradient(135deg, #b18161, #c68151, #fce1a1); /* ألوان أخف */
        }

        /* Cart Wrapper */
        .cart-container {
            width: 90%;
            max-width: 1000px;
            background: white;
            padding: 40px;
            border-radius: 16px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.15);
            text-align: center;
            animation: fadeIn 1s ease-in-out;
        }

        h2 {
            font-size: 28px;
            color: #f9a743; /* لون أفتح */
            margin-bottom: 30px;
            font-weight: bold;
        }

        /* Table Design */
        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 15px;
            text-align: center;
            border-bottom: 1px solid #ddd;
        }

        th {
            background-color: #232f3e;
            color: white;
            font-size: 16px;
        }

        td {
            background: #f9f9f9;
            color: #333;
            font-size: 16px;
        }

        tr:hover td {
            background: #e8e8e8;
        }

        /* Buttons */
        .btn {
            display: inline-block;
            padding: 12px 20px;
            font-size: 16px;
            border-radius: 6px;
            text-align: center;
            cursor: pointer;
            text-decoration: none;
            transition: all 0.3s ease;
        }

        .btn-danger {
            background-color: #e74c3c;
            color: white;
        }

            .btn-danger:hover {
                background-color: #c0392b;
            }

        .btn-primary {
            background-color: #28a745;
            color: white;
        }

            .btn-primary:hover {
                background-color: #218838;
            }

        /* Total Section */
        .total-section {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-top: 30px;
            font-size: 18px;
            font-weight: bold;
            border-top: 2px solid #ddd;
            padding-top: 15px;
        }

        .total-price {
            color: #e74c3c;
            font-size: 22px;
        }

        /* Empty Cart Message */
        .empty-cart-message {
            text-align: center;
            font-size: 18px;
            color: #555;
            margin-top: 30px;
        }

        /* Responsive Design */
        .btn {
            padding: 10px 15px;
            font-size: 14px;
        }

        .total-section {
            font-size: 16px;
        }

        /* Media Queries for Responsiveness */
        media (max-width: 768px) {
            body

        {
            height: auto;
            padding: 20px 0;
        }

        .cart-container {
            padding: 20px;
        }

        h2 {
            font-size: 24px;
            margin-bottom: 20px;
        }

        table {
            font-size: 14px;
        }

        th, td {
            padding: 10px;
        }

        .btn {
            padding: 8px 14px;
            font-size: 14px;
        }

        .total-section {
            font-size: 14px;
            flex-direction: column;
            align-items: flex-start;
            margin-top: 20px;
        }

        .total-price {
            font-size: 20px;
        }

        }

        media (max-width: 480px) {
            h2

        {
            font-size: 20px;
        }

        .total-price {
            font-size: 18px;
        }

        .cart-container {
            padding: 15px;
        }

        table {
            font-size: 12px;
        }

        th, td {
            padding: 8px;
        }

        .btn {
            padding: 6px 10px;
            font-size: 12px;
        }

        .total-section {
            font-size: 12px;
        }

        }
    </style>
</head>
<body>

    <div class="cart-container">
        <h2>Shopping Cart</h2>

        @if (Model != null && Model.Any())
        {
            <table>
                <thead>
                    <tr>
                        <th>Product</th>
                        <th>Price</th>
                        <th>Quantity</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ProductName</td>
                            <td>@item.Price</td>
                            <td>@item.Quantity</td>
                            <td>@(item.Price * item.Quantity)</td>
                        </tr>
                    }
                </tbody>
            </table>

            <!-- Total Section -->
            <div class="total-section">
                <span>Total:</span><span class="total-price">@Model.Sum(item => item.Price * item.Quantity).ToString("C")</span>
            </div>

            <!-- Buttons for Cart Interaction -->
            <div style="text-align: center; margin-top: 20px;">
                <a href="@Url.Action("ClearCart", "Cart")" class="btn btn-danger">Clear Cart</a>
                <a asp-controller="Payment" asp-action="Checkout" class="btn btn-primary">Checkout</a>
            </div>
        }
        else
        {
            <p class="empty-cart-message">Your cart is empty!</p>
        }
    </div>

</body>
</html>
