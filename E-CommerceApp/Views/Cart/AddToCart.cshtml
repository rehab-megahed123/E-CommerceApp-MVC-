@using E_commerce.DAl.Model
@model Product

<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تفاصيل المنتج</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* إضافة تنسيق بسيط لتصميم الصفحة */
        body {
            font-family: Arial, sans-serif;
            background-color: #f4f4f9;
            margin: 0;
            padding: 0;
        }

        .product-details {
            width: 80%;
            margin: 50px auto;
            background-color: #fff;
            padding: 20px;
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
        }

            .product-details h1 {
                font-size: 30px;
                color: #333;
                margin-bottom: 20px;
            }

        .product-image {
            width: 100%;
            max-width: 400px;
            border-radius: 8px;
            margin: 20px 0;
        }

        .product-info {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

            .product-info .price {
                font-size: 22px;
                font-weight: bold;
                color: #e74c3c;
            }

        .btn-buy {
            background-color: #3498db;
            color: white;
            border: none;
            padding: 10px 20px;
            font-size: 16px;
            border-radius: 5px;
            cursor: pointer;
            text-decoration: none;
        }

            .btn-buy:hover {
                background-color: #2980b9;
            }

        .product-info .details {
            flex-grow: 1;
        }

        .add-to-cart-btn {
            background-color: #2ecc71;
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            border: none;
            font-size: 18px;
        }

            .add-to-cart-btn:hover {
                background-color: #27ae60;
            }
    </style>
</head>
<body>

    <div class="product-details">
        <h1>@Model.Name</h1>

        <!-- عرض صورة المنتج -->
        <img src="@Model.ImageUrl" alt="Product Image" class="product-image">

        <div class="product-info">
            <!-- عرض السعر -->
            <div class="price">@Model.Price.ToString("C")</div>
        </div>

        <div class="product-info">
            <!-- عرض الوصف -->
            <div class="details">
                <h3>Description</h3>
                <p>@Model.Description</p>
            </div>
        </div>

        <!-- زر إضافة إلى العربة -->
        <form method="post" action="/Cart/">
            <input type="hidden" name="productId" value="@Model.ProductId" />
            <button type="submit" class="add-to-cart-btn"></button>
        </form>

        <!-- زر العودة للصفحة السابقة -->
        <a href="javascript:history.back()" class="back-btn">العودة</a>
    </div>

</body>
</html>

