@using E_CommerceApp.ViewModel
@model SearchResultViewModel
<!DOCTYPE html>
<html lang="ar">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - E-Commerce App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.8.1/font/bootstrap-icons.min.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <header>
        <!-- أي رأس هنا -->
    </header>

<div class="container mt-5">
    <form asp-action="Index" method="post" class="row mb-4 p-5 bg-white rounded shadow-sm">
        <div class="col-md-5 mb-3">
            <label for="searchTerm" class="form-label text-primary">Search by Product Name</label>
            <input type="text" asp-for="SearchItem" class="form-control p-3" placeholder="Search..." />
        </div>
        <div class="col-md-4 mb-3">
            <label for="CategoryId" class="form-label text-primary">Category</label>
            <select id="CategoryId" name="CategoryId" class="form-select p-3">
                <option value="0">All Categories</option>
                @foreach (var category in Model.CategoryList)
                {
                    <option value="@category.CategoryId">
                        @category.Name
                    </option>
                }
            </select>
        </div>
        <div class="col-md-3 mb-3 d-flex justify-content-center align-items-center">
            <button type="submit" class="btn btn-warning w-100 py-2">
                <i class="bi bi-search"></i> Search
            </button>
        </div>
    </form>
</div>
    <footer>
        <!-- أي تذييل هنا -->
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

<style>
    /* Form Wrapper */
    .container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
    }

    /* Background and Shadow */
    form {
        background: white;
        border-radius: 16px;
        padding: 40px;
        box-shadow: 0 8px 32px rgba(0, 0, 0, 0.1);
        animation: fadeIn 1s ease-in-out;
        margin-top: 20px; /* Make it more balanced */
    }

    /* Labels and Inputs */
    .form-label {
        font-size: 16px;
        color: #f9a743; /* Light color like login */
        font-weight: 600; /* Bold for better readability */
    }

    .form-control, .form-select {
        border-radius: 8px;
        padding: 14px;
        background: #fff9e5; /* Light background */
        border: 1px solid #f9d69e; /* Light borders */
        font-size: 14px;
        transition: border 0.3s ease;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.05); /* Soft shadow for input fields */
    }

        .form-control:focus, .form-select:focus {
            border-color: #f9a743; /* Focus color */
            box-shadow: 0px 4px 8px rgba(249, 167, 67, 0.4); /* Focus shadow */
        }

    /* Button */
    .btn-warning {
        background: linear-gradient(90deg, #f9a743, #fbd46d);
        color: white;
        font-size: 16px;
        border-radius: 8px;
        cursor: pointer;
        transition: background 0.3s ease;
        font-weight: bold;
        border: none;
        padding: 12px 18px; /* Adjust padding */
    }

        .btn-warning:hover {
            background: linear-gradient(90deg, #b18161, #fce1a1); /* Hover effect */
        }

        /* Button Icon */
        .btn-warning i {
            margin-right: 8px; /* Space between icon and text */
        }

    /* Responsive Design */
    media (max-width: 768px) {
        .container

    {
        padding: 15px; /* Adjust container padding */
    }

    form {
        padding: 30px; /* Adjust form padding for smaller screens */
    }

    .col-md-5, .col-md-4, .col-md-3 {
        margin-bottom: 15px; /* Add spacing between columns */
    }

    .btn-warning {
        padding: 10px 15px; /* Adjust button size for mobile */
        font-size: 14px;
    }

    }
</style>
