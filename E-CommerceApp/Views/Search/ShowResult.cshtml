@using E_commerce.DAl.Model
@model List<Product>
@{
    Layout = "AllLayout";
}


<div class="container mt-5">
    <div class="row">
        @foreach (var product in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card" style="width: 18rem;">
                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                    {
                        <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name">
                    }
                    else
                    {
                        <img src="https://via.placeholder.com/150" class="card-img-top" alt="@product.Name">
                    }

                    <div class="card-body">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text">
                            <strong>Price:</strong> @product.Price.ToString("C")
                        </p>
                        @if (product.Price!=0)
                        {
                            <p class="card-text">
                                <strong>Salary:</strong> @product.Price.ToString("C")
                            </p>
                        }
                        <a href="@Url.Action("Details", "Product", new { id = product.ProductId})" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>


